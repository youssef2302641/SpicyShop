<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Users</title>
    <link rel="stylesheet" href="/css/admin-dashboard.css?v=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
</head>
<body>
    <div class="admin-dashboard">
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Admin Panel</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="/admin/dashboard" class="nav-item">
                    <ion-icon name="home-outline"></ion-icon>
                    Dashboard
                </a>
                <a href="/admin/products" class="nav-item">
                    <ion-icon name="cube-outline"></ion-icon>
                    Products
                </a>
                <a href="/admin/orders" class="nav-item">
                    <ion-icon name="cart-outline"></ion-icon>
                    Orders
                </a>
                <a href="/admin/users" class="nav-item active">
                    <ion-icon name="people-outline"></ion-icon>
                    Users
                </a>
                <a href="/admin/settings" class="nav-item">
                    <ion-icon name="settings-outline"></ion-icon>
                    Settings
                </a>
            </nav>
        </aside>

        <main class="main-content">
            <header class="content-header">
                <div class="header-left">
                    <h1>Users</h1>
                </div>
                <div class="header-right">
                    <div class="filter-group">
                        <select id="roleFilter">
                            <option value="all">All Roles</option>
                            <option value="user">User</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                    <button class="btn btn-primary add-user-btn">
                        <ion-icon name="add-outline"></ion-icon>
                        Add User
                    </button>
                </div>
            </header>

            <div class="users-container">
                <table class="users-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Joined Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <span class="status-badge <%= user.role.toLowerCase() %>">
                                        <%= user.role %>
                                    </span>
                                </td>
                                <td>
                                    <span class="status-badge <%= user.status.toLowerCase() %>">
                                        <%= user.status %>
                                    </span>
                                </td>
                                <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn-icon edit-user" data-user-id="<%= user._id %>" title="Edit User">
                                            Edit
                                        </button>
                                        <button class="btn-icon delete-user" data-user-id="<%= user._id %>" title="Delete User">
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <!-- Add User Modal -->
    <div id="addUserModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Add New User</h2>
                <button class="close-modal">&times;</button>
            </div>
            <form id="addUserForm">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="firstName" required>
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required minlength="6">
                </div>
                <div class="form-group">
                    <label for="role">Role</label>
                    <select id="role" name="role" required>
                        <option value="user">User</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select id="status" name="status" required>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                        <option value="suspended">Suspended</option>
                    </select>
                </div>
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" id="cancelAddUser">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add User</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/admin-users.js"></script>
</body>
</html> 