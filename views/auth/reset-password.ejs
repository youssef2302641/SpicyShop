<!-- Reset Password Header -->
<section class="auth-header">
    <div class="auth-header-content">
        <h1>Reset Password</h1>
        <p>Enter your new password</p>
    </div>
</section>

<!-- Reset Password Form -->
<main>
    <section class="section auth">
        <div class="container">
            <div class="auth-content">
                <% if (error) { %>
                    <div class="error-message">
                        <ion-icon name="alert-circle-outline"></ion-icon>
                        <%= error %>
                    </div>
                <% } %>

                <form action="/auth/reset-password/<%= token %>" method="POST" class="auth-form">
                    <div class="form-group password-field">
                        <label for="password">New Password</label>
                        <div class="input-group">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                            <input type="password" id="password" name="password" placeholder="Enter new password" required>
                            <button type="button" class="password-toggle" onclick="togglePassword('password')">
                                <i class="ion-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-group password-field">
                        <label for="confirmPassword">Confirm New Password</label>
                        <div class="input-group">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" required>
                            <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">
                                <i class="ion-eye"></i>
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <span>Reset Password</span>
                        <ion-icon name="key-outline"></ion-icon>
                    </button>
                </form>

                <div class="auth-links">
                    <p>Remember your password? <a href="/auth/login">Sign In</a></p>
                </div>
            </div>
        </div>
    </section>
</main>

<!-- Add Ionicons -->
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

<script>
function togglePassword(inputId) {
    const input = document.getElementById(inputId);
    const icon = input.nextElementSibling.querySelector('i');
    
    if (input.type === 'password') {
        input.type = 'text';
        icon.classList.remove('ion-eye');
        icon.classList.add('ion-eye-off');
    } else {
        input.type = 'password';
        icon.classList.remove('ion-eye-off');
        icon.classList.add('ion-eye');
    }
}

// Add password validation
document.querySelector('form').addEventListener('submit', function(e) {
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;

    if (password !== confirmPassword) {
        e.preventDefault();
        alert('Passwords do not match!');
    }
});
</script> 