<!-- Forgot Password Header -->
<section class="auth-header">
    <h1>Forgot Password</h1>
    <p>Enter your email to reset your password</p>
</section>

<!-- Forgot Password Form -->
<section class="auth-form">
    <% if (error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>

    <% if (success) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
    <% } %>

    <form action="/auth/forgot-password" method="POST">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>

        <button type="submit" class="auth-button">Send Reset Link</button>
    </form>

    <div class="auth-links">
        <p>Remember your password? <a href="/auth/login">Login</a></p>
    </div>
</section>

<!-- Help Text -->
<section class="help-text">
    <div class="help-content">
        <h3>Need Help?</h3>
        <p>If you're having trouble resetting your password, please contact our support team:</p>
        <ul>
            <li>Email: support@spicy-shop.com</li>
            <li>Phone: +1 (555) 123-4567</li>
        </ul>
        <p>Our support team is available Monday through Friday, 9 AM to 5 PM EST.</p>
    </div>
</section> 